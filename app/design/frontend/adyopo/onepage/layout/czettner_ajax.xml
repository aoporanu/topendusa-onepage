<?xml version="1.0"?>

<layout>

<!--
Category default layout
-->

    <catalog_category_default>
        <reference name="product_list">
            <action method="setTemplate"><template>czettner_ajax/list.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/productInfo.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/czettner_ajax.css</name></action>
        </reference>
    </catalog_category_default>

<!--
Category layered navigation layout
-->

    <catalog_category_layered>
        <reference name="product_list">
            <action method="setTemplate"><template>czettner_ajax/list.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/productInfo.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/czettner_ajax.css</name></action>
        </reference>
    </catalog_category_layered>
</layout>
